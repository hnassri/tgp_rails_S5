<div class="container w-75">
</br>
<% if flash[:danger] %><div class="alert alert-danger" role="alert">
<p class="text-center"><%= flash[:danger] %></p>
<% end %>
</div>

<h1 class="text-center">Connecte-toi</h1>
</br>
<div class="container w-50">
<%= form_tag url_for(action: 'create'), method: "post" do %>
  <div class="form-group">
  <%= label_tag 'email' %>
  <%= email_field_tag 'email', @user, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= label_tag 'password' %>
  <%= password_field_tag 'password', @user, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= submit_tag 'Create Session', class: "btn btn-primary" %>
  </div>
  </div>
<% end %>